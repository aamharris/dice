<div class="container-full">
	<div class="row">
		<div class="col-lg-12 text-center v-center">
			<h1>Backgammon Dice Roller</h1>
			<p class="lead"></p>
			<br><br><br>

			<form class="col-lg-12" action="/games", method="POST", name="players">
				<div class="input-group" style="width:340px;text-align:center;margin:0 auto;">
					<div class="col-lg-12">
						<label for="player_1" class="input player">Player 1</label>
						<input class="form-control input-lg input player" title="" placeholder="" type="text">
					</div>
					<div class="col-lg-12">
						<label for="player_2" class="input player">Player 2</label>
						<input class="form-control input-lg input player" title="" placeholder="" type="text">
					</div>
					<br>
					<div class="col-lg-12 input-player-first">
						<p>Who Goes First?</p>
						<input type="radio" name="first" value="player_1" checked> Player 1
						<input type="radio" name="first" value="player_2"> Player 2
					</div>			
				</div>
				<div class="col-lg-12">
					<span class="input-group-btn"><input type="submit" class="btn btn-danger btn-lg btn-huge lato" value="Start Game"></span>
				</div>
			</form>
		</div>

	</div> <!-- /row -->
</div> <!-- /container full -->

		
